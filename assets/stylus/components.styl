popover-color = rgba(252, 114, 5, 1)
.popover
  margin-bottom: 11px
  width 10rem
  height 2rem
  background-color popover-color
  bd a popover-color
  border-radius 2px
  position relative
  .arrow
    left 50%
    position absolute
    width 0
    height 0
    border-style solid
    border-width 11px
    bottom -11px
    margin-left -11px
    border-color transparent
    border-top-color popover-color
    border-bottom-width 0
    &::after
      border-style solid
      border-width 3px
      bottom 1px
      position absolute
      width 0
      height 0
      border-color transparent
      margin-left -10px
      border-top-color white
      border-bottom-width 0
      content ' '
  .popover-content
    color white
    font-size 1rem
    text-align center