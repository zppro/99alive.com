.ua-container
  position relative
  z-index 10
  padding 1.5625rem
  margin-top 3.75rem
  overflow auto
  @media (min-width: 992px)
    padding 1.875rem 2.8125rem
    margin 0 auto
    margin-top 5rem
  &-hidden
    display none
    @media (min-width: 992px)
      display block
  &-footer
    display block
.ua-category
  &-content
    position relative
    z-index 10
    padding 1.5625rem
    margin-top 3.75rem
    height 100%
    overflow auto
    @media (min-width: 992px)
      padding 1.875rem 2.8125rem
      margin-top 5rem
      margin-left 18.75rem
    &-hidden
      display none
      @media (min-width: 992px)
        display block
.ua-content
  &-hasCarbon
    @media (min-width: 1280px)
      padding-right 11.5625rem
